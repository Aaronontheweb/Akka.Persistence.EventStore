<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFrameworks>net45;netstandard1.6</TargetFrameworks>
		<LangVersion>7.1</LangVersion>
	</PropertyGroup>
	<PropertyGroup>
		<AssemblyTitle>Akka.Persistence.Redis</AssemblyTitle>
		<Description>Akka.NET Persistence journal store backed by EventStore.</Description>
		<Copyright>Copyright Â© 2018 Akka.NET Contrib Team</Copyright>
		<VersionPrefix>1.0.0</VersionPrefix>
		<Authors>Akka.NET Contrib Team</Authors>
		<PackageTags>akka;actors;actor model;Akka;concurrency;persistence;eventsource;eventstore</PackageTags>
		<PackageIconUrl>http://getakka.net/images/AkkaNetLogo.Normal.png</PackageIconUrl>
		<PackageProjectUrl>https://github.com/AkkaNetContrib/Akka.Persistence.EventStore</PackageProjectUrl>
		<PackageLicenseUrl>https://github.com/AkkaNetContrib/Akka.Persistence.EventStore/blob/dev/LICENSE</PackageLicenseUrl>
		<GenerateDocumentationFile>false</GenerateDocumentationFile>
		<GeneratePackageOnBuild>true</GeneratePackageOnBuild>
	</PropertyGroup>


	<ItemGroup>
		<EmbeddedResource Include="reference.conf" />
	</ItemGroup>
	<ItemGroup>
		<PackageReference Include="Akka.Persistence" Version="1.3.*" />
		<PackageReference Include="Newtonsoft.Json" Version="11.0.*" />
	</ItemGroup>

	<ItemGroup Condition=" '$(TargetFramework)' == 'net45' ">
		<PackageReference Include="EventStore.Client" Version="4.0.0-4.1.*" />
	</ItemGroup>

	<ItemGroup Condition=" '$(TargetFramework)' == 'netstandard1.6' ">
		<PackageReference Include="EventStore.ClientAPI.NetCore" Version="4.0.0-4.1.*" />
	</ItemGroup>

	<ItemGroup>
	  <ProjectReference Include="..\Akka.Persistence.EventStore.Common\Akka.Persistence.EventStore.Common.csproj" />
	</ItemGroup>

</Project>